<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      <break></break>
      <div style="margin-top:50px;"></div>
      <h4>Formulario</h4>

      <div style="margin-top:50px;"></div>

      <div style="margin-top:50px;"></div>
      <div class="row justify-content-center mb-3">
        <div class="card mb-12" style="width: 100rem;">
          <div class="card-body">
            <%= simple_form_for @property do |form| %>
              <% if property.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being
                    saved:</h2>

                  <ul>
                    <% property.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <%= form.input :address, label: "direccion"   %>

              <%= form.input :city, label: "Barrio" %>


              <div class="debts">
                <h5>Integrantes:</h5>
                <div id='debts'>
                  <%= form.simple_fields_for :members do |task| %>
                    <%= render 'member_fields', :f => task %>
                  <% end %>
                  <div class='links'>
                    <%= link_to_add_association button_tag('+', type: "button", class: "button"), form, :members %>
                  </div>
                </div>
              </div>

              <div class="space_photos">
                <%= form.label "Fotos" %>
                <%= form.file_field :property %>
              </div>

              <div class="space_photos">
                <%= form.input :urgent, label: "Urgente?" %>
              </div>

              <%= form.input :notes, label: "Notas" %>

              <%= form.button :submit, "Crear", class: "btn-primary" %>
              <%= form.button :button, "Cancelar", type: "reset", class: "btn-outline-secondary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div style="margin-top:50px;"></div>